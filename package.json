{
  "name": "react-express-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate code for React with express",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build",
    "server": ". ./setenv.dev.sh && nodemon api/server.js",
    "server:prod": ". ./setenv.build.sh && node api/server.js",
    "client": ". ./setenv.local.sh && webpack-dev-server --open --config webpack.dev.js",
    "start": "run-p clean server client",
    "build:app": ". ./setenv.build.sh && webpack --config webpack.prod.js",
    "build:server": "webpack --config webpack.server.js",
    "build": "run-p clean build:app build:server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyderKishan/react-express-boilerplate.git"
  },
  "keywords": [
    "React",
    "Webpack",
    "Express"
  ],
  "author": "Balkishan S",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RyderKishan/react-express-boilerplate/issues"
  },
  "homepage": "https://github.com/RyderKishan/react-express-boilerplate#readme",
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "axios": "^0.19.2",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.2.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.5.0",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-react-css-modules": "^5.2.6",
    "compression-webpack-plugin": "^3.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "favicons-webpack-plugin": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "4.0.0-beta.11",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
